<!DOCTYPE html>
<html>
  <head>
    <title>Edit Course</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/readable/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Building Blocks</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if (user) { %>
            <li><a href="/signout">Sign Out</a></li>
            <% } else { %>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/login">Log In</a></li>
            <% }%>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1>Edit Course</h1>
      <div class="container">
        <% if (errors) { %>
          <ul>
            <% for (var i = 0; i < errors.length; i++) { %>
            <li class="myError"><%= errors[i] %></li>
            <% } %>
          </ul>
        <% } %>
        <form action="/professors/courses/<%= course._id %>/edit" method="post">       
          <div class="form-group" id="title">
            <label for="inputTitle">Title</label><br>
            <input type="text" id="inputTitle" name="title" value="<%= course.title %>">
          </div>          
          <div class="form-group">
            <label for="inputDept">Department</label><br>
            <input type="text" id="inputDept" name="department" value="<%= course.department %>">
          </div>
          <div class="form-group">
            <label for="inputBlock">Block</label><br>
            <input type="text" id="inputBlock" name="block" value="<%= course.block %>">
          </div>
          <div class="form-group">
            <label for="inputDescription">Description</label><br>
            <textarea type="text" id="inputDescription" name="description"><%= course.description %></textarea>
          </div>
          <button type="submit" class="btn btn-success">Edit Course</button>
        </form><br>
        <form action="/professors/courses/<%= course._id %>/remove" method="post"><button type="submit" class="btn btn-warning">Remove Course</button></form><br>
        <p><a href="/professors/courses/<%= course._id %>"><< Go Back</a></p>
      </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
