<!DOCTYPE html>
<html>
  <head>
    <title>Log In</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cosmo/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Building Blocks</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if (email) { %>
            <li><a href="/signout">Sign Out</a></li>
            <% } else { %>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/login">Log In</a></li>
            <% }%>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1>Log In</h1>
      <div class="container">
        <% if (errors) { %>
          <ul>
            <% for (var i = 0; i < errors.length; i++) { %>
            <li class="myError"><%= errors[i] %></li>
            <% } %>
          </ul>
        <% } %>
        <form action="/login" method="post">
          <div class="form-group">
            <label for="inputEmail">Email</label><br>
            <input type="text" id="inputEmail" name="email" value="<%= inputEmail%>">
          </div>
          <div class="form-group">
            <label for="inputPassword">Password</label><br>
            <input type="password" id="inputPassword" name="password">
          </div>
          <button type="submit" class="btn btn-default">Log In</button>
        </form>
      </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
